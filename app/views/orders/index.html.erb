<% content_for :title, "All Orders" %>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>All Orders Data</h5>
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
          <a class="close-link">
            <i class="fa fa-times"></i>
          </a>
        </div>
      </div>
      <div class="ibox-content">

        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover dataTables-example">
            <thead>
              <tr>
                <th>Sender Name</th>
                <th>Sender Phone</th>
                <th>Sender Address</th>
                <th>Sender Pincode</th>
                <th>Receiver Name</th>
                <th>Receiver Phone</th>
                <th>Receiver Address</th>
                <th>Receiver Pincode</th>
                <th>Parcel Weight (KG)</th>
                <th>Payment Mode</th>
                <th>Amount</th>
                <th>Status</th>
                <th width="101px">Buttons</th>
              </tr>
            </thead>

            <tbody>

            <% @orders.each do |order| %>

              <tr class="">
                <td><%= order.sender.name %></td>
                <td><%= order.sender.phone %></td>
                <td><%= order.sender.address %></td>
                <td><%= order.sender.pincode %></td>
                <td><%= order.receiver.name %></td>
                <td><%= order.receiver.phone %></td>
                <td><%= order.receiver.address %></td>
                <td><%= order.receiver.pincode %></td>
                <td><%= order.parcel_weight %></td>
                <td><%= order.payment_mode %></td>
                <td><%= order.cost_of_service %></td>
                <td><span class="badge badge-primary"> <%= order.status %></span></td>
                <td>
                  <%= link_to order_path(order.id), :class=>'btn btn-white btn-bitbucket', method: :delete, data: {confirm: 'Are you sure?'} do %>
                    <i class="fa fa-trash-o" aria-hidden="true"></i>
                  <% end %> 
                  <%= link_to edit_order_path(order.id), :class => "btn btn-white btn-bitbucket" do %>
                    <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                  <% end %>
                </td>
              </tr>

            <% end %>

            </tbody>

            <tfoot>
            <tr>
              <th>Sender Name</th>
              <th>Sender Phone</th>
              <th>Sender Address</th>
              <th>Sender Pincode</th>
              <th>Receiver Name</th>
              <th>Receiver Phone</th>
              <th>Receiver Address</th>
              <th>Receiver Pincode</th>
              <th>Parcel Weight (KG)</th>
              <th>Payment Mode</th>
              <th>Amount</th>
              <th>Status</th>
              <th width="101px">Buttons</th>
            </tr>
            </tfoot>
          </table>
        </div>

      </div>
    </div>
  </div>
</div>