<% content_for :title, "Edit Order" %>

<div class="ibox float-e-margins">
  <div class="ibox-title">
    <h5>Edit Order <small>Please </small></h5>
    <div class="ibox-tools">
      <a class="collapse-link">
        <i class="fa fa-chevron-up"></i>
      </a>
      <a class="close-link">
        <i class="fa fa-times"></i>
      </a>
    </div>
  </div>
  <div class="ibox-content">
    <div class="row">
      <%= form_for @order do |f| %>
          <div class="col-sm-4 b-r">
            <h3 class="m-t-none m-b">Sender Info</h3>
            <div class="form-group">
              <label>Name</label>
              <%= text_field_tag :s_name, @sender.name, :placeholder => "Enter full name", :class => "form-control", :required => "" %>
            </div>
            <div class="form-group">
              <label>Phone</label>
              <%= text_field_tag :s_phone, @sender.phone, :placeholder => "Enter phone number", :class => "form-control", :required => "" %>
            </div>
            <div class="form-group">
              <label>Address</label>
              <%= text_area_tag :s_address, @sender.address, :placeholder => "Enter full address", :class => "form-control", :rows => "3", :required => "" %>
            </div>
            <div class="form-group">
              <label>Pincode</label>
              <%= text_field_tag :s_pincode, @sender.pincode, :placeholder => "Enter pincode number", :class => "form-control", :required => "" %>
            </div>
            <div class="form-group">
              <label>Email</label>
              <%= text_field_tag :s_email, @sender.email, :placeholder => "Enter email ID", :class => "form-control", :required => "" %>
            </div>
          </div>
          <div class="col-sm-4 b-r">
            <h3 class="m-t-none m-b">Receiver Info</h3>
            <div class="form-group">
              <label>Name</label>
              <%= text_field_tag :r_name, @receiver.name, :placeholder => "Enter full name", :class => "form-control", :required => "" %>
            </div>
            <div class="form-group">
              <label>Phone</label>
              <%= text_field_tag :r_phone, @receiver.phone, :placeholder => "Enter phone number", :class => "form-control", :required => "" %>
            </div>
            <div class="form-group">
              <label>Address</label>
              <%= text_area_tag :r_address, @receiver.address, :placeholder => "Enter full address", :class => "form-control", :rows => "3", :required => "" %>
            </div>
            <div class="form-group">
              <label>Pincode</label>
              <%= text_field_tag :r_pincode, @receiver.pincode, :placeholder => "Enter pincode number", :class => "form-control", :required => "" %>
            </div>
            <div class="form-group">
              <label>Email</label>
              <%= text_field_tag :r_email, @receiver.email, :placeholder => "Enter email ID", :class => "form-control", :required => "" %>
            </div>
          </div>
          <div class="col-sm-4">
            <h3 class="m-t-none m-b">Order Info</h3>
            <div class="form-group">
              <label>Parcel weight</label>
              <%= f.text_field :parcel_weight, :placeholder => "Enter parcel weight", :type => "number", :class => "form-control", :required => "" %>
            </div>
            <div class="form-group">
              <label>Amount</label>
              <%= f.text_field :cost_of_service, :placeholder => "Enter total amount", :type => "number", :class => "form-control", :required => "" %>
            </div>
            <div class="form-group">
              <label>Select Payment Option</label>
              <%= f.select :payment_mode, options_for_select(["COD", "Prepay"], :selected => f.object.payment_mode), {}, { :class => "form-control m-b", :required => "" } %>
            </div>
            <div class="form-group">
              <label>Select Type Of Service</label>
              <%= f.select :service_type, options_for_select(["Regular", "Speed post"], :selected => f.object.service_type), {}, { :class => "form-control m-b", :required => "" } %>
            </div>
            <div class="form-group">
              <label>Select status</label>
              <%= f.select :status, options_for_select(["New", "Send", "Delivered"], :selected => f.object.status), {}, { :class => "form-control m-b", :required => "" } %>
            </div>
          </div>  
          <div class="col-sm-12">
            <div class="hr-line-dashed"></div>
            <%= f.submit :class => "btn btn-sm btn-primary pull-right m-t-n-xs" %>
          </div>
      <% end %>
    </div>
  </div>
</div>